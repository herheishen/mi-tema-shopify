<style>
  /* ========== CART ICON BUBBLE ULTRA PRO 2025 ========== */

  /* Base animations */
  @keyframes badge-pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.15);
    }
  }

  @keyframes badge-bounce {
    0% {
      transform: translateY(-20px);
      opacity: 0;
    }
    50% {
      transform: translateY(-5px);
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes bounce-rotate {
    0%, 100% {
      transform: rotate(0deg) scale(1);
    }
    25% {
      transform: rotate(-5deg) scale(1.05);
    }
    75% {
      transform: rotate(5deg) scale(1.05);
    }
  }

  @keyframes glow-pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.7);
    }
    50% {
      box-shadow: 0 0 0 8px rgba(255, 0, 0, 0);
    }
  }

  @keyframes float-up {
    from {
      opacity: 0;
      transform: translateY(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* SVG icon wrapper */
  .svg-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
  }

  .svg-wrapper svg {
    width: 24px;
    height: 24px;
    transition: all 0.3s ease;
  }

  /* Cart count bubble */
  .cart-count-bubble {
    position: absolute;
    top: -8px;
    right: -8px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    min-width: 24px;
    min-height: 24px;
    padding: 2px 6px;
    background: linear-gradient(135deg, #ff4444 0%, #dd0000 100%);
    color: white;
    border-radius: 12px;
    font-weight: 700;
    font-size: 0.75rem;
    line-height: 1;
    box-shadow: 0 4px 12px rgba(255, 0, 0, 0.3);
    animation: badge-bounce 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    white-space: nowrap;
    border: 2px solid white;
    z-index: 10;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  /* Badge pulse on update */
  .cart-count-bubble.pulse {
    animation: glow-pulse 0.6s ease-out, badge-pulse 0.4s ease-out;
  }

  /* Hover effect on cart icon */
  button:has(.svg-wrapper:hover) .svg-wrapper,
  a:has(.svg-wrapper:hover) .svg-wrapper,
  .header__icon:hover .svg-wrapper {
    transform: scale(1.1);
  }

  button:has(.svg-wrapper:hover) .svg-wrapper svg,
  a:has(.svg-wrapper:hover) .svg-wrapper svg,
  .header__icon:hover .svg-wrapper svg {
    filter: brightness(1.2);
  }

  /* Active/click state */
  .header__icon:active .svg-wrapper {
    transform: scale(0.95);
  }

  /* Cart bubble scale animation on update */
  .cart-count-bubble.update {
    animation: badge-bounce 0.5s cubic-bezier(0.34, 1.56, 0.64, 1), 
              bounce-rotate 0.6s ease-out 0.1s;
  }

  /* Bubble rotation on item add */
  .header__icon.item-added .cart-count-bubble {
    animation: bounce-rotate 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  /* Responsive touch optimization */
  @media (hover: none) and (pointer: coarse) {
    .svg-wrapper svg {
      width: 28px;
      height: 28px;
    }

    .cart-count-bubble {
      width: 28px;
      height: 28px;
      min-width: 28px;
      min-height: 28px;
      padding: 2px 8px;
      font-size: 0.8rem;
    }
  }

  /* Tablet optimization */
  @media (max-width: 1024px) {
    .svg-wrapper svg {
      width: 22px;
      height: 22px;
    }

    .cart-count-bubble {
      width: 22px;
      height: 22px;
      min-width: 22px;
      min-height: 22px;
      font-size: 0.7rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .cart-count-bubble {
      background: linear-gradient(135deg, #ff5555 0%, #ff0000 100%);
      box-shadow: 0 4px 16px rgba(255, 0, 0, 0.4);
      border-color: rgba(255, 255, 255, 0.8);
    }

    .svg-wrapper svg {
      filter: brightness(0.95);
    }

    .header__icon:hover .svg-wrapper svg {
      filter: brightness(1.3);
    }
  }

  /* Motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .svg-wrapper,
    .cart-count-bubble {
      animation: none;
      transition: none;
    }

    .cart-count-bubble.pulse,
    .cart-count-bubble.update,
    .header__icon.item-added .cart-count-bubble {
      animation: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: more) {
    .cart-count-bubble {
      border-width: 3px;
      font-weight: 900;
    }
  }

  /* Focus state for keyboard navigation */
  button:focus .svg-wrapper,
  a:focus .svg-wrapper {
    outline: 2px solid var(--color-link);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Print styles */
  @media print {
    .cart-count-bubble {
      display: none;
    }
  }
</style>

{% if cart == empty %}
  <span class="svg-wrapper" data-cart-empty="true">{{ 'icon-cart-empty.svg' | inline_asset_content }}</span>
{% else %}
  <span class="svg-wrapper" data-cart-empty="false">{{ 'icon-cart.svg' | inline_asset_content }}</span>
{% endif %}

<span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
{%- if cart != empty -%}
  <div class="cart-count-bubble" data-cart-count="{{ cart.item_count }}" role="status" aria-live="polite" aria-atomic="true">
    {%- if cart.item_count < 100 -%}
      <span aria-hidden="true">{{ cart.item_count }}</span>
    {%- else -%}
      <span aria-hidden="true">99+</span>
    {%- endif -%}
    <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
  </div>
{%- endif -%}

<script>
  // ========== CART ICON BUBBLE ULTRA PRO 2025 ==========
  class CartIconBubbleUltraPro {
    constructor(container) {
      this.container = container;
      this.bubble = container.querySelector('.cart-count-bubble');
      this.svgWrapper = container.querySelector('.svg-wrapper');
      this.lastCount = this.getCurrentCount();
      
      this.init();
    }

    init() {
      this.setupEventListeners();
      this.setupAccessibility();
      this.logMetrics('CartIconBubble initialized');
    }

    setupEventListeners() {
      // Monitor cart changes
      document.addEventListener('cart:updated', (e) => this.handleCartUpdate(e));
      
      // Monitor DOM changes for cart count
      this.observeCartChanges();

      // Icon click
      const cartLink = this.container.closest('a, button, [role="button"]');
      if (cartLink) {
        cartLink.addEventListener('click', () => this.animateBubble());
        cartLink.addEventListener('mouseenter', () => this.iconHover());
        cartLink.addEventListener('mouseleave', () => this.iconBlur());
      }
    }

    setupAccessibility() {
      if (this.bubble) {
        // Announce updates to screen readers
        this.bubble.setAttribute('role', 'status');
        this.bubble.setAttribute('aria-live', 'polite');
        this.bubble.setAttribute('aria-atomic', 'true');
      }
    }

    observeCartChanges() {
      // MutationObserver para cambios en el carrito
      if ('MutationObserver' in window) {
        const observer = new MutationObserver((mutations) => {
          const currentCount = this.getCurrentCount();
          if (currentCount !== this.lastCount) {
            this.onCountChange(this.lastCount, currentCount);
            this.lastCount = currentCount;
          }
        });

        if (this.bubble) {
          observer.observe(this.bubble, {
            characterData: true,
            childList: true,
            subtree: true,
          });
        }
      }
    }

    getCurrentCount() {
      if (!this.bubble) return 0;
      const text = this.bubble.textContent.trim();
      return parseInt(text.replace('+', '')) || 0;
    }

    handleCartUpdate(e) {
      const newCount = e.detail?.count || this.getCurrentCount();
      if (newCount > this.lastCount) {
        this.animateNewItem();
      }
      this.lastCount = newCount;
    }

    onCountChange(oldCount, newCount) {
      if (newCount > oldCount) {
        // Item added
        this.animateNewItem();
        this.trackCartUpdate('add', newCount - oldCount);
      } else if (newCount < oldCount) {
        // Item removed
        this.animateItemRemoval();
        this.trackCartUpdate('remove', oldCount - newCount);
      }
    }

    animateBubble() {
      if (!this.bubble) return;

      this.bubble.classList.remove('pulse', 'update');
      void this.bubble.offsetWidth; // Trigger reflow

      // Random animation
      const animations = ['pulse', 'update'];
      const randomAnimation = animations[Math.floor(Math.random() * animations.length)];
      this.bubble.classList.add(randomAnimation);

      setTimeout(() => {
        this.bubble.classList.remove(randomAnimation);
      }, 600);
    }

    animateNewItem() {
      if (!this.bubble) return;

      // Reset animation
      this.bubble.classList.remove('update');
      void this.bubble.offsetWidth;

      // Add animation
      this.bubble.classList.add('update');

      // Add container animation
      const iconContainer = this.container.closest('.header__icon, [data-cart-icon]');
      if (iconContainer) {
        iconContainer.classList.add('item-added');
        setTimeout(() => {
          iconContainer.classList.remove('item-added');
        }, 600);
      }

      // Haptic feedback on mobile (if available)
      this.triggerHaptic();
    }

    animateItemRemoval() {
      if (!this.bubble) return;

      this.bubble.style.animation = 'none';
      void this.bubble.offsetWidth;
      this.bubble.style.animation = 'badge-bounce 0.4s cubic-bezier(0.34, 1.56, 0.64, 1) reverse';

      setTimeout(() => {
        this.bubble.style.animation = '';
      }, 400);
    }

    iconHover() {
      if (this.svgWrapper) {
        this.svgWrapper.style.transform = 'scale(1.1)';
      }
    }

    iconBlur() {
      if (this.svgWrapper) {
        this.svgWrapper.style.transform = 'scale(1)';
      }
    }

    triggerHaptic() {
      if ('vibrate' in navigator) {
        navigator.vibrate(10);
      }
    }

    trackCartUpdate(action, quantity) {
      if (window.gtag) {
        gtag('event', 'cart_update', {
          action: action,
          quantity: quantity,
          cart_count: this.getCurrentCount(),
        });
      }
    }

    logMetrics(message) {
      if (window.performance && window.performance.mark) {
        performance.mark(message);
      }
    }
  }

  // Initialize on DOM ready
  document.addEventListener('DOMContentLoaded', function () {
    const cartIcons = document.querySelectorAll('[data-cart-icon], .header__icon');
    cartIcons.forEach((icon) => {
      new CartIconBubbleUltraPro(icon);
    });
  });

  // Reinitialize on header update
  document.addEventListener('theme:section:load', function (e) {
    const cartIcon = e.detail.target?.querySelector('[data-cart-icon], .header__icon');
    if (cartIcon) {
      new CartIconBubbleUltraPro(cartIcon);
    }
  });
</script>
