<style>
  /* ========== ULTRA PRO IMAGE BANNER IMPROVEMENTS ========== */
  
  /* Parallax effect */
  #Banner-{{ section.id }}.banner--parallax .banner__media {
    transform-origin: center;
    will-change: transform;
  }

  /* Blur effect options */
  #Banner-{{ section.id }}.banner--blur-light .banner__media {
    filter: blur(0.5px);
  }

  #Banner-{{ section.id }}.banner--blur-medium .banner__media {
    filter: blur(2px);
  }

  #Banner-{{ section.id }}.banner--blur-heavy .banner__media {
    filter: blur(4px);
  }

  /* Enhanced overlay gradient */
  #Banner-{{ section.id }}.banner--gradient-overlay::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0,0,0,{{ section.settings.image_overlay_opacity | divided_by: 100.0 }}) 0%, rgba(0,0,0,0) 100%);
    pointer-events: none;
    z-index: 1;
  }

  /* Image zoom animation on load */
  #Banner-{{ section.id }} .banner__media img {
    animation: image-load-zoom 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes image-load-zoom {
    from {
      transform: scale(1.05);
      opacity: 0.8;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Smooth content fade-in */
  #Banner-{{ section.id }} .banner__content {
    animation: content-slide-fade 0.9s ease-out 0.1s both;
  }

  @keyframes content-slide-fade {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Enhanced button hover states */
  #Banner-{{ section.id }} .banner__buttons .button {
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  #Banner-{{ section.id }} .banner__buttons .button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    transition: left 0.4s ease;
  }

  #Banner-{{ section.id }} .banner__buttons .button:hover::before {
    left: 100%;
  }

  #Banner-{{ section.id }} .banner__buttons .button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
  }

  /* Text shadow for better contrast */
  #Banner-{{ section.id }} .banner__heading {
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    letter-spacing: -0.02em;
  }

  #Banner-{{ section.id }} .banner__text {
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
  }

  /* Media query optimizations */
  @media (prefers-reduced-motion: reduce) {
    #Banner-{{ section.id }} .banner__media img,
    #Banner-{{ section.id }} .banner__content,
    #Banner-{{ section.id }} .banner__buttons .button {
      animation: none;
    }
  }

  /* High DPI screens optimization */
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    #Banner-{{ section.id }} .banner__media img {
      image-rendering: -webkit-optimize-contrast;
    }
  }

  /* Touch device optimizations */
  @media (hover: none) and (pointer: coarse) {
    #Banner-{{ section.id }} .banner__buttons .button {
      padding: 16px 28px;
      font-size: 1.1rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    #Banner-{{ section.id }} .banner__heading {
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    }
  }
</style>

