{%- style -%}
  /* Ultra Pro Collage enhancements */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Collage item visuals */
  .collage {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat(3, 1fr);
    align-items: start;
  }

  .collage--mobile {
    grid-template-columns: 1fr 1fr;
  }

  .collage__item {
    will-change: transform, opacity;
    transition: transform 0.35s cubic-bezier(0.2, 0.8, 0.2, 1), box-shadow 0.35s;
  }

  /* Card glassmorphism */
  .collage-card, .card-wrapper {
    background: rgba(255,255,255,0.7);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    border-radius: 12px;
    border: 1px solid rgba(var(--color-link-rgb, 0, 0), 0.08);
    overflow: hidden;
    box-shadow: 0 6px 18px rgba(0,0,0,0.06);
  }

  /* Reveal animations */
  .animate--reveal {
    opacity: 0;
    transform: translateY(12px) scale(.995);
    transition: opacity 420ms ease, transform 420ms cubic-bezier(.2,.8,.2,1);
  }

  .animate--reveal.is-visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Media ratio and hover micro-interactions */
  .media { border-radius: 10px; overflow: hidden; }
  .media img { display:block; width:100%; height:100%; object-fit:cover; transition: transform .5s cubic-bezier(.2,.8,.2,1); }
  .collage__item:hover .media img { transform: scale(1.06); }

  /* Video play affordance */
  .deferred-media__poster-button { background: linear-gradient(135deg, rgba(0,0,0,0.35), rgba(0,0,0,0.15)); border-radius:50%; padding:8px; }

  /* Headings */
  .collage-wrapper-title { margin-bottom: 14px; }

  /* Responsive grid for different block counts */
  @media (max-width: 1024px) {
    .collage { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 640px) {
    .collage { grid-template-columns: 1fr; }
    .collage--mobile { grid-template-columns: 1fr; }
  }

  /* Accessibility focus ring */
  .collage__item:focus-within { outline: 3px solid rgba(var(--color-link-rgb, 0, 0), 0.14); outline-offset: 6px; }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate--reveal { transition: none; transform: none; opacity: 1; }
    .media img { transition: none; }
  }

{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="collage-wrapper-title inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    <div class="collage{% if section.settings.mobile_layout == 'collage' %} collage--mobile{% endif %}" role="list" aria-label="{{ section.settings.heading | default: 'Collage' }}">
      {% assign skip_card_product_styles = false %}
      {%- for block in section.blocks -%}
        {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
        <div
          class="collage__item collage__item--{{ block.type }} collage__item--{{ section.settings.desktop_layout }} animate--reveal"
          {{ block.shopify_attributes }}
          role="listitem"
          tabindex="-1"
          aria-roledescription="Collage item"
          data-block-id="{{ block.id }}"
        >
          {%- case block.type -%}
            {%- when 'image' -%}
              <div class="collage-card {% if section.settings.card_styles == 'none' %}global-media-settings{% else %}card-wrapper {{ section.settings.card_styles }} color-{{ settings.card_color_scheme }} gradient{% endif %}" aria-hidden="false">
                <div class="media media--transparent ratio" {% if block.settings.image != blank %} style="--ratio-percent: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%" {% else %} style="--ratio-percent: 100%" {% endif %}>
                  {%- if block.settings.image != blank -%}
                    {%- capture sizes -%}
                      (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - 100px) / 1),
                      (min-width: 750px) calc(100vw - 100px),
                      calc(100vw - 30px)
                    {%- endcapture -%}
                    {{
                      block.settings.image
                      | image_url: width: 3200
                      | image_tag:
                        sizes: sizes,
                        widths: '200, 360, 540, 720, 900, 1100, 1400, 1800, 2200, 2600, 3200'
                    }}
                  {%- else -%}
                    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
              </div>

            {%- when 'product' -%}
              {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
              <div class="collage-card card-wrapper product-collage" aria-label="Product">
                {% render 'card-product',
                  card_product: block.settings.product,
                  media_aspect_ratio: 'adapt',
                  show_secondary_image: block.settings.second_image,
                  extend_height: true,
                  placeholder_image: placeholder_image,
                  skip_styles: skip_card_product_styles
                %}
              </div>
              {% assign skip_card_product_styles = true %}

            {%- when 'collection' -%}
              {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
              <div class="collage-card card-wrapper collection-collage" aria-label="Collection">
                {% render 'card-collection',
                  card_collection: block.settings.collection,
                  media_aspect_ratio: 'adapt',
                  columns: 2,
                  extend_height: true,
                  wrapper_class: section.settings.card_styles,
                  placeholder_image: placeholder_image
                %}
              </div>

            {%- when 'video' -%}
              <div class="collage-card {% if section.settings.card_styles == 'none' %}global-media-settings{% else %}{{ section.settings.card_styles }} color-{{ settings.card_color_scheme }} gradient{% endif %}">
                <modal-opener data-modal="#PopupModal-{{ block.id }}">
                  <div class="deferred-media">
                    <button
                      class="deferred-media__poster full-unstyled-link"
                      type="button"
                      aria-label="{{ 'sections.video.load_video' | t: description: block.settings.description | escape }}"
                      aria-haspopup="dialog"
                      data-media-id="{{ block.settings.video_url.id }}"
                    >
                      <div class="media media--transparent ratio" {% if block.settings.cover_image != blank %} style="--ratio-percent: {{ 1 | divided_by: block.settings.cover_image.aspect_ratio | times: 100 }}%" {% else %} style="--ratio-percent: 100%" {% endif %}>
                        <span class="deferred-media__poster-button motion-reduce">
                          <span class="svg-wrapper">{{- 'icon-play.svg' | inline_asset_content -}}</span>
                        </span>

                        {%- if block.settings.cover_image != blank -%}
                          {%- capture sizes -%}
                            (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - 100px) / 1),
                            (min-width: 750px) calc(100vw - 100px),
                            calc(100vw - 30px)
                          {%- endcapture -%}
                          {{
                            block.settings.cover_image
                            | image_url: width: 3000
                            | image_tag: sizes: sizes, widths: '550, 720, 990, 1100, 1500, 2200, 3000'
                          }}
                        {%- else -%}
                          {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                        {%- endif -%}
                      </div>
                    </button>
                  </div>
                </modal-opener>

                <modal-dialog id="PopupModal-{{ block.id }}" class="modal-video media-modal color-{{ settings.color_schemes | first }}">
                  <div class="modal-video__content" role="dialog" aria-label="{{ block.settings.description | escape }}" aria-modal="true" tabindex="-1">
                    <button id="ModalClose-{{ block.id }}" type="button" class="modal-video__toggle" aria-label="{{ 'accessibility.close' | t }}">
                      <span class="svg-wrapper">{{- 'icon-close.svg' | inline_asset_content -}}</span>
                    </button>
                    <div class="modal-video__content-info">
                      <deferred-media class="modal-video__video template-popup">
                        <template>
                          {%- if block.settings.video_url.type == 'youtube' -%}
                            <iframe src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?enablejsapi=1" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen title="{{ block.settings.description | escape }}"></iframe>
                          {%- else -%}
                            <iframe src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}" class="js-vimeo" allow="autoplay; encrypted-media" allowfullscreen title="{{ block.settings.description | escape }}"></iframe>
                          {%- endif -%}
                        </template>
                      </deferred-media>
                    </div>
                  </div>
                </modal-dialog>
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  // Collage Ultra Pro JS
  (function () {
    class CollageUltraPro {
      constructor(root) {
        this.root = root;
        this.items = Array.from(root.querySelectorAll('.collage__item'));
        this.observer = null;
        this.init();
      }

      init() {
        this.setupRevealObserver();
        this.setupKeyboardNavigation();
        this.deferHeavyMedia();
      }

      setupRevealObserver() {
        if ('IntersectionObserver' in window) {
          this.observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
              const el = entry.target;
              if (entry.isIntersecting) {
                el.classList.add('is-visible');
                this.observer.unobserve(el);
              }
            });
          }, { rootMargin: '0px 0px -8% 0px', threshold: 0.08 });

          this.items.forEach((item) => this.observer.observe(item));
        } else {
          // Fallback: reveal all
          this.items.forEach((item) => item.classList.add('is-visible'));
        }
      }

      setupKeyboardNavigation() {
        // Allow focusing listitems and keyboard activation
        this.items.forEach((item) => {
          item.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              const clickable = item.querySelector('a, button');
              if (clickable) clickable.click();
            }
          });
        });
      }

      deferHeavyMedia() {
        // Ensure deferred media (video iframes) are only loaded when interacted with
        const deferredButtons = this.root.querySelectorAll('.deferred-media__poster');
        deferredButtons.forEach((btn) => {
          btn.closest('button')?.addEventListener('click', (e) => {
            // Let modal opener handle loading; mark for analytics
            const mediaId = e.currentTarget.dataset.mediaId;
            if (window.gtag) gtag('event', 'collage_media_open', { media_id: mediaId });
          });
        });
      }
    }

    document.addEventListener('DOMContentLoaded', function () {
      const root = document.querySelector('.collage');
      if (root) new CollageUltraPro(root);
    });
  })();
</script>

