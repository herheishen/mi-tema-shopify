<script>
  // ========== ANNOUNCEMENT BAR ULTRA PRO ========== 
  class AnnouncementBarUltraPro {
    constructor(container) {
      this.container = container;
      this.slider = container.querySelector('.announcement-bar-slider');
      this.slides = container.querySelectorAll('.slideshow__slide');
      this.slideButtons = container.querySelectorAll('.slider-button');
      this.slideTimer = null;
      this.currentSlide = 0;
      this.autoPlayDelay = parseInt(container.querySelector('[data-speed]')?.dataset.speed || '5') * 1000;
      this.isAutoPlaying = container.querySelector('[data-autoplay]')?.dataset.autoplay === 'true';
      this.touchStartX = 0;
      this.touchEndX = 0;
      this.isTransitioning = false;

      this.init();
    }

    init() {
      this.setupEventListeners();
      this.setupIntersectionObserver();
      this.setupAccessibility();
      if (this.isAutoPlaying && this.slides.length > 1) {
        this.startAutoPlay();
      }
      this.logPerformance('Announcement Bar initialized');
    }

    setupEventListeners() {
      // Slide button clicks
      this.slideButtons.forEach((btn) => {
        btn.addEventListener('click', () => this.handleSlideClick(btn));
      });

      // Touch/swipe support
      this.slider?.addEventListener('touchstart', (e) => this.handleTouchStart(e), false);
      this.slider?.addEventListener('touchend', (e) => this.handleTouchEnd(e), false);

      // Pause auto-play on hover
      this.slider?.addEventListener('mouseenter', () => this.pauseAutoPlay());
      this.slider?.addEventListener('mouseleave', () => {
        if (this.isAutoPlaying) this.startAutoPlay();
      });

      // Link click tracking
      this.container.querySelectorAll('.announcement-bar__link').forEach((link) => {
        link.addEventListener('click', (e) => this.trackLinkClick(e));
      });

      // Keyboard navigation
      this.container.addEventListener('keydown', (e) => this.handleKeyboardNav(e));
    }

    setupIntersectionObserver() {
      const options = {
        threshold: 0.5,
        rootMargin: '0px',
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, options);

      this.slides.forEach((slide) => observer.observe(slide));
    }

    setupAccessibility() {
      // Set initial ARIA attributes
      this.slides.forEach((slide, index) => {
        slide.setAttribute('role', 'group');
        slide.setAttribute('aria-roledescription', 'slide');
        slide.setAttribute('aria-label', `Slide ${index + 1} of ${this.slides.length}`);
        slide.setAttribute('aria-hidden', index !== this.currentSlide);
      });

      // Add keyboard navigation hint
      const region = this.container.querySelector('[role="region"]');
      if (region) {
        region.setAttribute('aria-live', 'polite');
        region.setAttribute('aria-label', 'Announcements');
      }

      // Announce slide changes
      this.announceSlide(this.currentSlide);
    }

    handleSlideClick(btn) {
      const isNextButton = btn.classList.contains('slider-button--next');
      this.pauseAutoPlay();
      
      if (isNextButton) {
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
      } else {
        this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
      }

      this.updateSlide();
      this.announceSlide(this.currentSlide);
      
      if (this.isAutoPlaying) {
        this.startAutoPlay();
      }
    }

    handleTouchStart(e) {
      this.touchStartX = e.changedTouches[0].screenX;
    }

    handleTouchEnd(e) {
      this.touchEndX = e.changedTouches[0].screenX;
      this.handleSwipe();
    }

    handleSwipe() {
      const threshold = 50;
      const diff = this.touchStartX - this.touchEndX;

      if (Math.abs(diff) > threshold && !this.isTransitioning) {
        this.pauseAutoPlay();
        this.isTransitioning = true;

        if (diff > 0) {
          // Swiped left - go to next
          this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        } else {
          // Swiped right - go to previous
          this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        }

        this.updateSlide();
        this.announceSlide(this.currentSlide);
        
        setTimeout(() => {
          this.isTransitioning = false;
        }, 300);

        if (this.isAutoPlaying) {
          this.startAutoPlay();
        }
      }
    }

    handleKeyboardNav(e) {
      if (e.key === 'ArrowLeft' || e.key === 'ArrowRight') {
        if (e.key === 'ArrowLeft') {
          this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        } else {
          this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        }
        this.pauseAutoPlay();
        this.updateSlide();
        this.announceSlide(this.currentSlide);
        if (this.isAutoPlaying) {
          this.startAutoPlay();
        }
      }
    }

    updateSlide() {
      requestAnimationFrame(() => {
        this.slides.forEach((slide, index) => {
          const isActive = index === this.currentSlide;
          slide.setAttribute('aria-hidden', !isActive);
          slide.style.display = isActive ? 'block' : 'none';
          
          if (isActive) {
            slide.style.animation = 'none';
            void slide.offsetWidth; // Trigger reflow
            slide.style.animation = 'fade-in-up 0.6s ease-out';
          }
        });

        // Update button states
        this.slideButtons.forEach((btn) => {
          btn.setAttribute('aria-pressed', 'false');
        });
      });
    }

    announceSlide(index) {
      const announcement = this.container.getAttribute('aria-live');
      if (announcement) {
        const slideText = this.slides[index]?.innerText?.substring(0, 100) || `Slide ${index + 1}`;
        // Create or update announcement region
        let ariaLive = this.container.querySelector('[role="status"]');
        if (!ariaLive) {
          ariaLive = document.createElement('div');
          ariaLive.setAttribute('role', 'status');
          ariaLive.setAttribute('aria-live', 'polite');
          ariaLive.setAttribute('aria-atomic', 'true');
          ariaLive.style.position = 'absolute';
          ariaLive.style.left = '-9999px';
          this.container.appendChild(ariaLive);
        }
        ariaLive.textContent = `Slide ${index + 1} of ${this.slides.length}: ${slideText}`;
      }
    }

    trackLinkClick(e) {
      const link = e.currentTarget;
      const href = link.getAttribute('href');
      const text = link.textContent;
      
      if (window.gtag) {
        gtag('event', 'announcement_click', {
          'announcement_text': text.trim(),
          'announcement_url': href,
          'announcement_index': this.currentSlide + 1,
        });
      }
    }

    startAutoPlay() {
      if (this.slides.length <= 1) return;
      
      this.slideTimer = setInterval(() => {
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        this.updateSlide();
      }, this.autoPlayDelay);
    }

    pauseAutoPlay() {
      if (this.slideTimer) {
        clearInterval(this.slideTimer);
        this.slideTimer = null;
      }
    }

    logPerformance(message) {
      if (window.performance && window.performance.mark) {
        performance.mark(message);
      }
    }

    destroy() {
      this.pauseAutoPlay();
      this.slideButtons.forEach((btn) => {
        btn.removeEventListener('click', (e) => this.handleSlideClick(e));
      });
    }
  }

  // Initialize on DOM ready
  document.addEventListener('DOMContentLoaded', function () {
    const announcementBars = document.querySelectorAll('slideshow-component');
    announcementBars.forEach((bar) => {
      new AnnouncementBarUltraPro(bar);
    });
  });

  // Reinitialize on theme:section:load (Shopify theme editor)
  document.addEventListener('theme:section:load', function (e) {
    const announcementBar = e.detail.target.querySelector('slideshow-component');
    if (announcementBar) {
      new AnnouncementBarUltraPro(announcementBar);
    }
  });

  // Cleanup on theme:section:unload
  document.addEventListener('theme:section:unload', function (e) {
    const announcementBar = e.detail.target.querySelector('slideshow-component');
    if (announcementBar && announcementBar._ultraPro) {
      announcementBar._ultraPro.destroy();
    }
  });
</script>

