<style>
  /* ========== ULTRA PRO ANNOUNCEMENT BAR ========== */

  /* Base animations */
  @keyframes slide-down {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse-badge {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes shimmer {
    0% {
      background-position: -1000px 0;
    }
    100% {
      background-position: 1000px 0;
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Utility bar improvements */
  .utility-bar {
    animation: slide-down 0.5s ease-out;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .utility-bar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    animation: shimmer 3s infinite;
    pointer-events: none;
  }

  /* Announcement bar enhancements */
  .announcement-bar {
    animation: fade-in-up 0.6s ease-out 0.1s both;
  }

  .announcement-bar__message {
    position: relative;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  /* Link hover effects */
  .announcement-bar__link {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .announcement-bar__link::before {
    content: '';
    position: absolute;
    bottom: -2px;
    left: -100%;
    width: 100%;
    height: 2px;
    background: currentColor;
    transition: left 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .announcement-bar__link:hover::before {
    left: 0;
  }

  .announcement-bar__link:hover .svg-wrapper {
    animation: arrow-slide 0.4s ease;
  }

  @keyframes arrow-slide {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(4px);
    }
  }

  /* Icon animations */
  .svg-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .announcement-bar__link:hover .svg-wrapper svg {
    animation: icon-bounce 0.4s ease;
  }

  @keyframes icon-bounce {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(3px);
    }
  }

  /* Slider enhancements */
  .announcement-bar-slider {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .slider-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    padding: 0;
    background: transparent;
    border: 1px solid currentColor;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    opacity: 0.7;
  }

  .slider-button:hover {
    opacity: 1;
    background: rgba(0, 0, 0, 0.05);
    transform: scale(1.1);
  }

  .slider-button:active {
    transform: scale(0.95);
  }

  .slider-button .svg-wrapper {
    width: 16px;
    height: 16px;
  }

  /* Slide animations */
  .slideshow__slide {
    animation: fade-in-up 0.7s ease-out;
  }

  .slideshow__slide[aria-hidden="true"] {
    pointer-events: none;
  }

  /* Badge pulse effect */
  .announcement-badge {
    display: inline-block;
    padding: 2px 8px;
    background: rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    animation: pulse-badge 2s infinite;
  }

  /* Localization wrapper */
  .localization-wrapper {
    animation: fade-in-up 0.8s ease-out 0.2s both;
    display: flex;
    gap: 1rem;
  }

  /* Dropdown enhancements */
  .localization-form {
    position: relative;
  }

  .localization-form select,
  .localization-form button {
    background: transparent;
    border: 1px solid currentColor;
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
    opacity: 0.8;
  }

  .localization-form select:hover,
  .localization-form button:hover {
    opacity: 1;
    background: rgba(0, 0, 0, 0.03);
  }

  .localization-form select:focus,
  .localization-form button:focus {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }

  /* Responsive optimizations */
  @media (max-width: 749px) {
    .utility-bar__grid {
      flex-direction: column;
      gap: 0.5rem;
    }

    .announcement-bar-slider {
      gap: 0.5rem;
    }

    .slider-button {
      width: 28px;
      height: 28px;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .utility-bar::before {
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.05), transparent);
    }

    .slider-button:hover {
      background: rgba(255, 255, 255, 0.05);
    }

    .localization-form select:hover,
    .localization-form button:hover {
      background: rgba(255, 255, 255, 0.03);
    }
  }

  /* Motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .utility-bar,
    .announcement-bar,
    .slideshow__slide,
    .localization-wrapper {
      animation: none;
    }

    .announcement-bar__link::before,
    .slider-button,
    .announcement-badge {
      transition: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: more) {
    .slider-button {
      border-width: 2px;
    }

    .announcement-bar__link::before {
      height: 3px;
    }
  }

  /* Touch device optimizations */
  @media (hover: none) and (pointer: coarse) {
    .slider-button {
      width: 44px;
      height: 44px;
      min-width: 44px;
      min-height: 44px;
    }

    .announcement-bar__message {
      font-size: 1.1rem;
    }
  }
</style>

