{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}

{%- style -%}
  @keyframes page-fade-in { from { opacity: 0; } to { opacity: 1; } }
  @keyframes title-reveal { from { opacity: 0; transform: translateY(-18px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes card-pop { from { opacity: 0; transform: translateY(8px) scale(.995); } to { opacity: 1; transform: translateY(0) scale(1); } }
  @keyframes card-hover-lift { from { transform: translateY(0); } to { transform: translateY(-6px); } }
  @keyframes list-fade { from { opacity: 0; } to { opacity: 1; } }

  .section-{{ section.id }}-padding { animation: page-fade-in 0.6s ease-out; }

  [data-collection-list-page] { padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px; }

  @media screen and (min-width: 750px) {
    [data-collection-list-page] { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
  }

  [data-collection-title] { animation: title-reveal 0.7s cubic-bezier(.34,1.56,.64,1) 0.12s both; }
  [data-collection-grid] { animation: list-fade 0.8s ease-out 0.18s both; }
  [data-collection-item] { animation: card-pop 0.55s ease-out calc(0.06s * var(--item-index, 0)); transition: transform .28s ease, box-shadow .28s ease; }
  [data-collection-item]:hover { transform: translateY(-6px); box-shadow: 0 18px 48px rgba(31,38,135,0.12); }

  .collection-list__item .card-collection__content { backdrop-filter: blur(8px); border-radius: 12px; border: 1px solid rgba(255,255,255,0.06); }

  @media (prefers-reduced-motion: reduce) {
    * { animation-duration: 0.01ms !important; animation-iteration-count: 1 !important; transition-duration: 0.01ms !important; }
  }
{%- endstyle -%}

<div class="page-width" data-collection-list-page data-section-id="{{ section.id }}" data-columns-desktop="{{ section.settings.columns_desktop }}" data-columns-mobile="{{ section.settings.columns_mobile }}">
  <h1 class="title title--primary inline-richtext{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" data-collection-title>
    {{ section.settings.title }}
  </h1>
  {%- liquid
    case section.settings.sort
      when 'products_high', 'products_low'
        assign collections = collections | sort: 'all_products_count'
      when 'date', 'date_reversed'
        assign collections = collections | sort: 'published_at'
    endcase

    if section.settings.sort == 'products_high' or section.settings.sort == 'date_reversed' or section.settings.sort == 'alphabetical_reversed'
      assign collections = collections | reverse
    endif

    assign modulo_result = 28 | modulo: section.settings.columns_desktop
    assign paginate_by = 30
    if modulo_result == 0
      assign paginate_by = 28
    endif
  -%}
  {%- paginate collections by paginate_by -%}
    <ul
      class="collection-list grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
      role="list"
      data-collection-grid
      data-grid-columns="{{ section.settings.columns_desktop }}"
      data-grid-columns-mobile="{{ section.settings.columns_mobile }}"
    >
      {%- for collection in collections -%}
        <li
          class="collection-list__item grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          data-collection-item
          data-collection-id="{{ collection.id }}"
          data-item-index="{{ forloop.index }}"
          style="--item-index: {{ forloop.index0 }};"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }}; --item-index: {{ forloop.index0 }};"
          {% endif %}
        >
          {% render 'card-collection',
            card_collection: collection,
            media_aspect_ratio: section.settings.image_ratio,
            columns: 3
          %}
        </li>
      {%- endfor -%}
    </ul>
    {% render 'pagination', paginate: paginate %}
  {%- endpaginate -%}
</div>

<script>
  class CollectionListUltraPro {
    constructor() {
      this.root = document.querySelector('[data-collection-list-page]');
      this.grid = this.root?.querySelector('[data-collection-grid]');
      this.config = {
        sectionId: this.root?.getAttribute('data-section-id'),
        columns: this.root?.getAttribute('data-columns-desktop')
      };
      if (!this.root || !this.grid) return;
      this.init();
    }

    init() {
      this.trackView();
      this.setupItemInteractions();
      this.setupPaginationTracking();
      this.setupIntersectionObserver();
    }

    trackView() {
      const collectionCount = this.grid.querySelectorAll('[data-collection-item]').length;
      if (typeof gtag !== 'undefined') {
        gtag('event', 'collection_list_view', {
          section_id: this.config.sectionId,
          collection_count: collectionCount,
          columns: this.config.columns,
          page_location: window.location.href
        });
      }
    }

    setupItemInteractions() {
      this.grid.querySelectorAll('[data-collection-item]').forEach(item => {
        const id = item.getAttribute('data-collection-id');
        item.addEventListener('mouseenter', () => {
          if (typeof gtag !== 'undefined') gtag('event', 'collection_card_hover', { collection_id: id, section_id: this.config.sectionId });
        });
        const link = item.querySelector('a[href*="/collections/"]');
        if (link) link.addEventListener('click', () => { if (typeof gtag !== 'undefined') gtag('event', 'collection_card_click', { collection_id: id, section_id: this.config.sectionId }); });
      });
    }

    setupPaginationTracking() {
      const pagination = document.querySelector('.pagination');
      if (!pagination) return;
      pagination.querySelectorAll('a[href*="page="]').forEach(link => {
        link.addEventListener('click', () => {
          const match = link.href.match(/page=(\d+)/);
          if (match && typeof gtag !== 'undefined') gtag('event', 'collection_list_pagination', { page: match[1], section_id: this.config.sectionId });
        });
      });
    }

    setupIntersectionObserver() {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && entry.target.matches('[data-collection-item]')) {
            if (typeof gtag !== 'undefined') {
              gtag('event', 'collection_card_visible', { collection_id: entry.target.getAttribute('data-collection-id'), section_id: this.config.sectionId });
            }
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.2 });
      this.grid.querySelectorAll('[data-collection-item]').forEach(el => observer.observe(el));
    }
  }
  window.addEventListener('load', () => { new CollectionListUltraPro(); });
</script>

