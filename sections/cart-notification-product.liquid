<style>
  /* ========== CART NOTIFICATION PRODUCT ULTRA PRO 2025 ========== */

  /* Base animations */
  @keyframes item-enter {
    from {
      opacity: 0;
      transform: translateY(16px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes image-zoom-in {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes slide-in-left {
    from {
      opacity: 0;
      transform: translateX(-12px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes pulse-border {
    0%, 100% {
      border-color: rgba(var(--color-link-rgb, 0, 0), 0.2);
      box-shadow: 0 4px 12px rgba(var(--color-link-rgb, 0, 0), 0.1);
    }
    50% {
      border-color: rgba(var(--color-link-rgb, 0, 0), 0.4);
      box-shadow: 0 6px 20px rgba(var(--color-link-rgb, 0, 0), 0.15);
    }
  }

  @keyframes shimmer-text {
    0% {
      background-position: -1000px 0;
    }
    100% {
      background-position: 1000px 0;
    }
  }

  /* Item container */
  .cart-notification-product {
    display: flex;
    gap: 16px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(var(--color-link-rgb, 0, 0), 0.15);
    border-radius: 12px;
    margin-bottom: 12px;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    animation: item-enter 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    overflow: hidden;
  }

  .cart-notification-product::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(var(--color-link-rgb, 0, 0), 0.05) 0%,
      transparent 100%
    );
    pointer-events: none;
  }

  /* Hover state */
  .cart-notification-product:hover {
    transform: translateY(-4px);
    border-color: rgba(var(--color-link-rgb, 0, 0), 0.3);
    box-shadow: 0 12px 28px rgba(var(--color-link-rgb, 0, 0), 0.15);
    background: rgba(255, 255, 255, 0.8);
  }

  /* Image container */
  .cart-notification-product__image {
    position: relative;
    flex-shrink: 0;
    width: 100px;
    height: 100px;
    border-radius: 10px;
    overflow: hidden;
    background: linear-gradient(135deg, #f0f0f0 0%, #e8e8e8 100%);
    animation: image-zoom-in 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    border: 2px solid rgba(var(--color-link-rgb, 0, 0), 0.1);
  }

  .cart-notification-product__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    display: block;
  }

  .cart-notification-product:hover .cart-notification-product__image img {
    transform: scale(1.08);
  }

  /* Content area */
  .cart-notification-product__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
    animation: slide-in-left 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) 0.1s both;
  }

  /* Product vendor */
  .cart-notification-product__vendor {
    font-size: 0.8rem;
    color: var(--color-link);
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    opacity: 0.85;
    margin-bottom: 4px;
  }

  /* Product title */
  .cart-notification-product__name {
    font-size: 0.95rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--color-text);
    word-break: break-word;
    margin-bottom: 8px;
    transition: color 0.3s ease;
  }

  .cart-notification-product:hover .cart-notification-product__name {
    color: var(--color-link);
  }

  /* Options list */
  .cart-notification-product__options {
    display: grid;
    gap: 6px;
    margin-top: auto;
  }

  /* Option item */
  .cart-notification-product__option {
    display: flex;
    gap: 8px;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .cart-notification-product__option-label {
    font-weight: 600;
    color: var(--color-text);
    min-width: fit-content;
  }

  .cart-notification-product__option-value {
    word-break: break-word;
  }

  /* Selling plan */
  .cart-notification-product__plan {
    display: inline-block;
    margin-top: 8px;
    padding: 4px 8px;
    background: linear-gradient(135deg, rgba(var(--color-link-rgb, 0, 0), 0.1) 0%, rgba(var(--color-link-rgb, 0, 0), 0.05) 100%);
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-link);
    border-left: 3px solid var(--color-link);
  }

  /* Remove button (if in drawer) */
  .cart-notification-product__remove {
    position: absolute;
    top: 8px;
    right: 8px;
    width: 28px;
    height: 28px;
    padding: 0;
    border: none;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .cart-notification-product:hover .cart-notification-product__remove {
    opacity: 1;
  }

  .cart-notification-product__remove:hover {
    background: var(--color-link);
    color: white;
    box-shadow: 0 4px 12px rgba(var(--color-link-rgb, 0, 0), 0.3);
  }

  /* Loading skeleton */
  .cart-notification-product.loading {
    animation: pulse-border 1.5s ease-in-out infinite;
  }

  .cart-notification-product.loading .cart-notification-product__image {
    background: linear-gradient(
      90deg,
      #f0f0f0 0%,
      #e8e8e8 50%,
      #f0f0f0 100%
    );
    background-size: 1000px 100%;
    animation: shimmer-text 1.5s infinite;
  }

  /* Removed state */
  .cart-notification-product.removed {
    opacity: 0.5;
    text-decoration: line-through;
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .cart-notification-product {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(var(--color-link-rgb, 100, 150, 255), 0.2);
    }

    .cart-notification-product:hover {
      background: rgba(255, 255, 255, 0.12);
    }

    .cart-notification-product__image {
      background: linear-gradient(135deg, #333333 0%, #2a2a2a 100%);
    }

    .cart-notification-product__remove {
      background: rgba(255, 255, 255, 0.15);
      color: white;
    }
  }

  /* Touch device optimizations */
  @media (hover: none) and (pointer: coarse) {
    .cart-notification-product {
      padding: 12px;
      margin-bottom: 8px;
    }

    .cart-notification-product__image {
      width: 90px;
      height: 90px;
    }

    .cart-notification-product__remove {
      opacity: 1;
    }

    .cart-notification-product:hover {
      transform: none;
    }
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .cart-notification-product {
      padding: 12px;
      gap: 12px;
    }

    .cart-notification-product__image {
      width: 90px;
      height: 90px;
    }

    .cart-notification-product__name {
      font-size: 0.9rem;
    }
  }

  /* Mobile */
  @media (max-width: 640px) {
    .cart-notification-product {
      padding: 10px;
      gap: 10px;
    }

    .cart-notification-product__image {
      width: 80px;
      height: 80px;
    }

    .cart-notification-product__name {
      font-size: 0.85rem;
    }

    .cart-notification-product__option {
      font-size: 0.8rem;
    }
  }

  /* Motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .cart-notification-product,
    .cart-notification-product__image,
    .cart-notification-product__content,
    .cart-notification-product__image img {
      animation: none;
      transition: none;
    }
  }

  /* High contrast */
  @media (prefers-contrast: more) {
    .cart-notification-product {
      border-width: 2px;
    }

    .cart-notification-product__vendor {
      font-weight: 700;
    }

    .cart-notification-product__option-label {
      font-weight: 700;
    }
  }

  /* Print */
  @media print {
    .cart-notification-product__remove {
      display: none;
    }
  }
</style>

{%- if cart != empty -%}
  <div class="cart-notification-products-list" data-cart-products role="list" aria-label="Cart items">
    {%- for item in cart.items -%}
      <div
        id="cart-notification-product-{{ item.key }}"
        class="cart-notification-product"
        data-product-key="{{ item.key }}"
        data-product-id="{{ item.product_id }}"
        data-quantity="{{ item.quantity }}"
        role="listitem"
        data-animation-delay="{{ forloop.index0 | times: 0.1 }}"
      >
        {%- if item.image -%}
          <div class="cart-notification-product__image global-media-settings">
            <img
              src="{{ item.image | image_url: width: 140 }}"
              alt="{{ item.image.alt | escape }}"
              width="70"
              height="{{ 70 | divided_by: item.image.aspect_ratio | ceil }}"
              loading="lazy"
              decoding="async"
              role="presentation"
            >
          </div>
        {%- endif -%}

        <div class="cart-notification-product__content">
          {%- if settings.show_vendor -%}
            <p class="cart-notification-product__vendor">{{ item.product.vendor }}</p>
          {%- endif -%}

          <div>
            <h3 class="cart-notification-product__name" role="heading" aria-level="3">
              {{ item.product.title | escape }}
            </h3>

            {%- if item.options_with_values.size > 0 or item.properties.size > 0 -%}
              <div class="cart-notification-product__options">
                {%- unless item.product.has_only_default_variant -%}
                  {%- for option in item.options_with_values -%}
                    <div class="cart-notification-product__option" role="definition">
                      <span class="cart-notification-product__option-label">{{ option.name }}:</span>
                      <span class="cart-notification-product__option-value">{{ option.value }}</span>
                    </div>
                  {%- endfor -%}
                {%- endunless -%}

                {%- for property in item.properties -%}
                  {%- assign property_first_char = property.first | slice: 0 -%}
                  {%- if property.last != blank and property_first_char != '_' -%}
                    <div class="cart-notification-product__option" role="definition">
                      <span class="cart-notification-product__option-label">{{ property.first }}:</span>
                      <span class="cart-notification-product__option-value">
                        {%- if property.last contains '/uploads/' -%}
                          <a href="{{ property.last }}" class="link" target="_blank" rel="noopener noreferrer" aria-label="Download {{ property.last | split: '/' | last }}">
                            {{ property.last | split: '/' | last }}
                          </a>
                        {%- else -%}
                          {{ property.last }}
                        {%- endif -%}
                      </span>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            {%- endif -%}

            {%- if item.selling_plan_allocation != null -%}
              <div class="cart-notification-product__plan" role="note">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" width="12" height="12" style="display: inline-block; margin-right: 4px; vertical-align: text-bottom;">
                  <path d="M2 2a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H4a2 2 0 01-2-2V2zm3 3a1 1 0 100-2 1 1 0 000 2zm5 0a1 1 0 100-2 1 1 0 000 2zm-5 5a1 1 0 100-2 1 1 0 000 2zm5 0a1 1 0 100-2 1 1 0 000 2z"></path>
                </svg>
                {{ item.selling_plan_allocation.selling_plan.name }}
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
{%- endif -%}

<script>
  // ========== CART NOTIFICATION PRODUCT ULTRA PRO 2025 ==========
  class CartNotificationProductUltraPro {
    constructor(container) {
      this.container = container;
      this.items = new Map();
      this.init();
    }

    init() {
      this.setupItemTracking();
      this.setupAccessibility();
      this.setupAnimationDelays();
      this.setupEventListeners();
      this.logMetrics('CartNotificationProduct initialized');
    }

    setupItemTracking() {
      const products = this.container.querySelectorAll('[data-product-key]');
      products.forEach((product) => {
        const key = product.dataset.productKey;
        this.items.set(key, {
          element: product,
          key: key,
          id: product.dataset.productId,
          quantity: parseInt(product.dataset.quantity),
        });
      });
    }

    setupAnimationDelays() {
      const products = this.container.querySelectorAll('.cart-notification-product');
      products.forEach((product, index) => {
        const delay = index * 0.08;
        product.style.animationDelay = `${delay}s`;
      });
    }

    setupAccessibility() {
      const list = this.container.querySelector('[role="list"]');
      if (list) {
        list.setAttribute('aria-label', `Cart contains ${this.items.size} item${this.items.size !== 1 ? 's' : ''}`);
      }
    }

    setupEventListeners() {
      document.addEventListener('cart:item-added', (e) => this.onItemAdded(e));
      document.addEventListener('cart:item-removed', (e) => this.onItemRemoved(e));
      document.addEventListener('cart:updated', (e) => this.onCartUpdated(e));
    }

    onItemAdded(e) {
      const { key, quantity } = e.detail;
      const item = this.items.get(key);

      if (item) {
        item.quantity = quantity;
        this.animateItemUpdate(item.element, 'added');
        this.trackEvent('product_added_to_cart', { product_id: item.id });
      }
    }

    onItemRemoved(e) {
      const { key } = e.detail;
      const item = this.items.get(key);

      if (item) {
        this.animateItemRemove(item.element);
        this.items.delete(key);
        this.trackEvent('product_removed_from_cart', { product_id: item.id });
      }
    }

    onCartUpdated(e) {
      const { items } = e.detail || {};
      if (items) {
        this.updateItemCounts(items);
      }
    }

    updateItemCounts(items) {
      items.forEach(({ key, quantity }) => {
        const item = this.items.get(key);
        if (item && item.quantity !== quantity) {
          item.quantity = quantity;
          this.animateItemUpdate(item.element, 'updated');
        }
      });
    }

    animateItemUpdate(element, type) {
      element.classList.add('updating');
      element.style.animation = 'none';
      void element.offsetWidth; // Trigger reflow

      if (type === 'added') {
        element.style.animation = 'item-enter 0.5s cubic-bezier(0.34, 1.56, 0.64, 1)';
      } else {
        element.style.animation = 'pulse-border 0.6s ease-in-out';
      }

      setTimeout(() => {
        element.classList.remove('updating');
        element.style.animation = '';
      }, 600);
    }

    animateItemRemove(element) {
      element.classList.add('removed');
      element.style.opacity = '0.5';

      setTimeout(() => {
        element.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
        element.style.opacity = '0';
        element.style.transform = 'translateY(-10px)';

        setTimeout(() => {
          element.remove();
        }, 300);
      }, 800);
    }

    trackEvent(eventName, data = {}) {
      if (window.gtag) {
        gtag('event', eventName, {
          cart_items_count: this.items.size,
          ...data,
        });
      }

      // Dispatch custom event
      document.dispatchEvent(
        new CustomEvent('product-notification:' + eventName, {
          detail: { ...data, items_count: this.items.size },
        })
      );
    }

    logMetrics(message) {
      if (window.performance && window.performance.mark) {
        performance.mark(message);
      }
    }
  }

  // Initialize on DOM ready
  document.addEventListener('DOMContentLoaded', function () {
    const container = document.querySelector('[data-cart-products]');
    if (container) {
      new CartNotificationProductUltraPro(container);
    }
  });

  // Reinitialize on section load
  document.addEventListener('theme:section:load', function (e) {
    const container = e.detail.target?.querySelector('[data-cart-products]');
    if (container) {
      new CartNotificationProductUltraPro(container);
    }
  });
</script>
